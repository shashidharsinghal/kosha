# Server Configuration
NODE_ENV=production
PORT=3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=kosha_user
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=kosha_db
POSTGRES_URL=postgresql://kosha_user:your-postgres-password@localhost:5432/kosha_db

# MongoDB Database
MONGODB_URI=mongodb://localhost:27017/kosha
MONGODB_DB=kosha

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# Google OAuth (for Gmail integration)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/gmail/callback

# UPI Payment Provider (e.g., Razorpay)
UPI_PROVIDER_API_KEY=your-upi-provider-api-key
UPI_PROVIDER_API_SECRET=your-upi-provider-secret
UPI_PROVIDER_MERCHANT_ID=your-merchant-id

# Market Data API (for investment prices)
MARKET_DATA_API_KEY=your-market-data-api-key
MARKET_DATA_API_URL=https://api.marketdata.com

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.com

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
